"public"."Cursos".id_docente = $P{id_docente} AND
"public"."PeriodoLectivo".prd_lectivo_nombre = $P{prd_lectivo_nombre} AND
"public"."Cursos".curso_ciclo = $P{curso_ciclo} AND
"public"."Cursos".curso_paralelo = $P{curso_paralelo} AND
